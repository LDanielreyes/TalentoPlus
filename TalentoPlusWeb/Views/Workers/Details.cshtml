@model Worker

@{
    ViewData["Title"] = "Details";
}

<h1>Worker Details</h1>

<div>
    <h4>Worker Information</h4>
    <hr />
    
    <h5 class="mt-3">Personal Information</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FullName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
        
        <dt class="col-sm-3">Documento de Identidad</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DocumentoIdentidad)</dd>
    </dl>
    
    <h5 class="mt-3">Contact Information</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
        
        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
    </dl>
    
    <h5 class="mt-3">Employment Information</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Position)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Department)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Wage)</dt>
        <dd class="col-sm-9">@String.Format("{0:C}", Model.Wage)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EducationalLevel)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.EducationalLevel)</dd>
    </dl>
    
    <h5 class="mt-3">Professional Profile</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ProfessionalProfile)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.ProfessionalProfile)</dd>
    </dl>
    
    <h5 class="mt-3">System Information</h5>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegisterDate)</dt>
        <dd class="col-sm-9">@Model.RegisterDate.ToString("yyyy-MM-dd HH:mm")</dd>
        
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UserName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>
    </dl>
</div>
<div>
    <a asp-action="DownloadCv" asp-route-id="@Model?.Id" class="btn btn-secondary"><i class="bi bi-file-earmark-pdf"></i> Download CV</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Edit</a>
    @if (!User.IsInRole("Worker"))
    {
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    }
</div>

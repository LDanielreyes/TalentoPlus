@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to TalentoPlus</h1>
    <p>Manage your workers and sales efficiently.</p>
    @if (!User.Identity.IsAuthenticated)
    {
        <p>Please <a asp-area="Identity" asp-page="/Account/Login">Login</a> to continue.</p>
    }
    else
    {
        <p>Go to <a asp-controller="Admins" asp-action="Dashboard">Admin Dashboard</a></p>
    }
</div>

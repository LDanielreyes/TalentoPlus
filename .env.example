# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_CONNECTION_STRING=Host=localhost;Database=talentodb;Username=postgres;Password=your_password_here

# JWT Configuration  
JWT_SECRET=your_super_secret_jwt_key_here_at_least_32_characters
JWT_ISSUER=TalentoPlusAPI
JWT_AUDIENCE=TalentoPlusClients

# SMTP Configuration
SMTP_HOST=pro.eu.turbo-smtp.com
SMTP_PORT=465
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password
SMTP_ENABLE_SSL=true

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000;https://+:5001
